{
  "name": "promise-toolbox",
  "version": "0.8.0",
  "license": "ISC",
  "description": "Essential utils for promises",
  "keywords": [
    "promise",
    "utils",
    "promisify",
    "promisification",
    "thenify",
    "thenification"
  ],
  "homepage": "https://github.com/JsCommunity/promise-toolbox",
  "bugs": "https://github.com/JsCommunity/promise-toolbox/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/JsCommunity/promise-toolbox"
  },
  "author": {
    "name": "Julien Fontanet",
    "email": "julien.fontanet@isonoe.net"
  },
  "preferGlobal": false,
  "main": "dist/",
  "bin": {},
  "files": [
    "dist/"
  ],
  "engines": {
    "node": ">=0.12"
  },
  "dependencies": {
    "make-error": "^1.0.4"
  },
  "devDependencies": {
    "babel-cli": "^6.3.17",
    "babel-eslint": "^7.0.0",
    "babel-preset-babili": "^0.0.9",
    "babel-preset-latest": "^6.16.0",
    "babel-preset-stage-0": "^6.3.13",
    "dependency-check": "^2.5.1",
    "husky": "^0.12.0",
    "jest": "^18.1.0",
    "native-promise-only": "^0.8.1",
    "standard": "^8.0.0"
  },
  "scripts": {
    "build": "NODE_ENV=production babel --source-maps --out-dir=dist/ src/",
    "commit-msg": "npm test",
    "depcheck": "dependency-check ./package.json",
    "dev": "NODE_DEV=development babel --watch --source-maps --out-dir=dist/ src/",
    "dev-test": "jest --bail --watch",
    "lint": "standard",
    "posttest": "npm run lint && npm run depcheck",
    "prepublish": "npm run build",
    "test": "jest"
  },
  "babel": {
    "env": {
      "production": {
        "comments": false,
        "presets": [
          "babili"
        ]
      }
    },
    "presets": [
      "latest",
      "stage-0"
    ]
  },
  "jest": {
    "testPathDirs": [
      "<rootDir>/src"
    ]
  },
  "standard": {
    "ignore": [
      "dist"
    ],
    "parser": "babel-eslint"
  }
}
