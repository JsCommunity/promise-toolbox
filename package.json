{
  "name": "promise-toolbox",
  "version": "0.10.1",
  "license": "ISC",
  "description": "Essential utils for promises",
  "keywords": [
    "promise",
    "utils",
    "promisify",
    "promisification",
    "thenify",
    "thenification"
  ],
  "homepage": "https://github.com/JsCommunity/promise-toolbox",
  "bugs": "https://github.com/JsCommunity/promise-toolbox/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/JsCommunity/promise-toolbox"
  },
  "author": {
    "name": "Julien Fontanet",
    "email": "julien.fontanet@isonoe.net"
  },
  "preferGlobal": false,
  "bin": {},
  "files": [
    "*.js",
    "*.js.map"
  ],
  "browserslist": [
    ">2%"
  ],
  "engines": {
    "node": ">=4"
  },
  "dependencies": {
    "make-error": "^1.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-function-bind": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.2.0",
    "babel-minify": "^0.5.0",
    "babelify": "^10.0.0",
    "browserify": "^16.0.0",
    "cross-env": "^5.1.3",
    "eslint": "^5.0.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.0",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.1.1",
    "jest": "^23.2.0",
    "rimraf": "^2.6.2"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production babel --source-maps --out-dir=./ src/",
    "clean": "rimraf '*.js' '*.js.map'",
    "dev": "cross-env NODE_ENV=development babel --watch --source-maps --out-dir=./ src/",
    "dev-test": "jest --bail --watch",
    "postbuild": "browserify -s promiseToolbox index.js | babel-minify > umd.js",
    "prebuild": "npm run clean",
    "predev": "npm run prebuild",
    "prepublishOnly": "npm run build",
    "pretest": "eslint --ignore-path .gitignore --fix src/",
    "test": "jest"
  },
  "jest": {
    "collectCoverage": true,
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testRegex": "\\.spec\\.js$"
  },
  "husky": {
    "hooks": {
      "commit-msg": "npm test"
    }
  }
}
