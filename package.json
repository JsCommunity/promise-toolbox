{
  "name": "promise-toolbox",
  "version": "0.8.0",
  "license": "ISC",
  "description": "Essential utils for promises",
  "keywords": [
    "promise",
    "utils",
    "promisify",
    "promisification",
    "thenify",
    "thenification"
  ],
  "homepage": "https://github.com/JsCommunity/promise-toolbox",
  "bugs": "https://github.com/JsCommunity/promise-toolbox/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/JsCommunity/promise-toolbox"
  },
  "author": {
    "name": "Julien Fontanet",
    "email": "julien.fontanet@isonoe.net"
  },
  "preferGlobal": false,
  "main": "dist/",
  "bin": {},
  "files": [
    "dist/"
  ],
  "engines": {
    "node": ">=4"
  },
  "dependencies": {
    "make-error": "^1.2.1"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.1.1",
    "babel-preset-env": "^1.1.8",
    "babel-preset-stage-0": "^6.16.0",
    "cross-env": "^3.1.4",
    "dependency-check": "^2.7.0",
    "husky": "^0.12.0",
    "jest": "^18.1.0",
    "rimraf": "^2.5.4",
    "standard": "^8.6.0"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production babel --source-maps --out-dir=dist/ src/",
    "commitmsg": "npm test",
    "dev": "cross-env NODE_ENV=development babel --watch --source-maps --out-dir=dist/ src/",
    "dev-test": "jest --bail --watch",
    "posttest": "standard && dependency-check ./package.json",
    "prebuild": "rimraf dist/",
    "predev": "npm run prebuild",
    "prepublish": "npm run build",
    "test": "jest"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "browsers": "> 5%",
            "node": 4
          }
        }
      ],
      "stage-0"
    ]
  },
  "jest": {
    "testPathDirs": [
      "<rootDir>/src"
    ],
    "testRegex": "\\.spec\\.js$"
  },
  "standard": {
    "ignore": [
      "dist"
    ],
    "parser": "babel-eslint"
  }
}
