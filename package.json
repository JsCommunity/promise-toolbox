{
  "name": "promise-toolbox",
  "version": "0.4.0",
  "license": "ISC",
  "description": "Essential utils for promises",
  "keywords": [
    "promise",
    "utils",
    "promisify",
    "promisification",
    "thenify",
    "thenification"
  ],
  "homepage": "https://github.com/julien-f/js-promise-toolbox",
  "bugs": "https://github.com/julien-f/js-promise-toolbox/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/julien-f/js-promise-toolbox"
  },
  "author": {
    "name": "Julien Fontanet",
    "email": "julien.fontanet@isonoe.net"
  },
  "preferGlobal": false,
  "main": "dist/",
  "bin": {},
  "files": [
    "dist/"
  ],
  "engines": {
    "node": ">=0.12"
  },
  "dependencies": {
    "make-error": "^1.0.4"
  },
  "devDependencies": {
    "babel-cli": "^6.3.17",
    "babel-eslint": "^6.0.0",
    "babel-plugin-transform-runtime": "^6.3.13",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "clarify": "^1.0.5",
    "dependency-check": "^2.5.1",
    "julien-f-source-map-support": "0.0.0",
    "mocha": "^2.5.0",
    "must": "^0.13.1",
    "native-promise-only": "^0.8.1",
    "nyc": "^6.1.1",
    "sinon": "^1.17.2",
    "standard": "^7.0.0",
    "trace": "^2.0.1"
  },
  "scripts": {
    "build": "babel --source-maps --out-dir=dist/ src/",
    "dev": "babel --watch --source-maps --out-dir=dist/ src/",
    "dev-test": "mocha --opts .mocha.opts --watch --reporter=min \"dist/**/*.spec.js\"",
    "lint": "standard",
    "depcheck": "dependency-check ./package.json",
    "posttest": "npm run lint && npm run depcheck",
    "prepublish": "npm run build",
    "test": "nyc mocha --opts .mocha.opts \"dist/**/*.spec.js\""
  },
  "standard": {
    "ignore": [
      "dist/**"
    ],
    "parser": "babel-eslint"
  }
}
